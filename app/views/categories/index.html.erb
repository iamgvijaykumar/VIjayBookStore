<h2>Categories</h2>

<table>
	<tr>
		<th>Category Name</th>
		<th>Actions</th>
	</tr>
<br/>
	<% @categories.each do |category| %>
		<tr>
			<td><%= category.name %></td>
			<td><%= link_to 'Edit', edit_category_path(category.id) %> | <%= link_to 'Delete', category_path(category), method: :delete, data: {confirm: "Are You Sure?"} %> </td>
		</tr>
	<% end %>
</table>